pkgbuild=1
arch="auto"

# Package description
shortdesc=("MPKG package system: console utilities")
longdesc=("Console tools related to mpkg. A must-have package.")

# Source URL
source=("svn:svn://agilialinux.ru/mpkg/mpkg/trunk/console")

# Tags
tags="base sys-pkgtools"

# Build system
BUILD_SYSTEM="cmake"
BUILD_KEYS="-DCMAKE_INSTALL_PREFIX=/usr"

after_build() {
	( cd ${pkgdir}/usr/bin ; ln -s mpkg buildpkg )
	( cd ${pkgdir}/usr/bin ; ln -s mpkg buildsrcpkg )
	mkdir -p ${pkgdir}/usr/share/man/ru/man1/
	cd $srcdir
	svn co svn://agilialinux.ru/i18n/mpkg mpkg-manuals
	cd $srcdir/mpkg-manuals
	for i in `find . -name '*.1'` ; do
		install -m0644 $i ${pkgdir}/usr/share/man/ru/man1/`basename $i`
	done
}

